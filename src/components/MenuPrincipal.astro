---
const opcoesMenu = [
    {
        nome: 'Início',
        href: '/'
    },
    {
        nome: 'Sobre Nós',
        href: '/sobre-nos'
    }
]
---

<ul class="flex justify-end bg-amber-950 text-white">
    {opcoesMenu.map(opcao => (
        <li class="p-2 hover:bg-amber-800">
            <a href={opcao.href}>
                {opcao.nome}
            </a>
        </li>
    ))}
</ul>